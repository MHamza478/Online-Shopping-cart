<h2 class="text-center mb-5">Available Products</h2>
<div>
	<div class="row">
		<% @products.each do |product| %>
			<div class="col-sm-3 mb-5">
				<div class="card shadow">
					<img class="card-img-top"  style="height: 150px" src="<%= product.image_url %>" alt="Card image cap">
					<div class="card-body text-center">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">Price: <%= product.price %>$</p>
					</div>
					<div class="card-body text-center">
						<%= form_for(@order_items) do |f| %>
							<%= f.hidden_field :product_id, value: product.id %>
							<%= f.hidden_field :unit_price, value: product.price %>
							<%= f.hidden_field :name, value: product.name %>
							<%= f.hidden_field :image_url, value: product.image_url %>
							<div class="form-group row">
								<label for="inputPassword" class="col-sm-6 col-form-label">Quantity</label>
								<div class="col-sm-6">
									<%= f.number_field :quantity, value: 1, min: 1, max: product.quantity, class: 'form-control' %>
								</div>
							</div>
							<%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>